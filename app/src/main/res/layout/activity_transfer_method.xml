<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferMethodActivity"
    android:orientation="vertical">

     <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:background="#EC581C">

        <ImageView
            android:src="@drawable/back_24"
            android:id="@+id/transferBeckButtonId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            />

         <LinearLayout
             android:layout_weight="8"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="#EC581C">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Transfer FUNDS"
                 android:textSize="25sp"
                 android:layout_marginTop="20dp"
                 android:layout_gravity="center_horizontal"
                 android:textColor="@color/white"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="System Available(1.2% charge apply)"
                 android:textSize="15sp"
                 android:padding="5dp"
                 android:layout_gravity="center_horizontal"
                 android:textColor="@color/white"/>

         </LinearLayout>


     </LinearLayout>



    <ListView
        android:id="@+id/transferlistViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:divider="#E3EAEF"
        android:listSelector="#CC9266"
        android:dividerHeight="1dp"
        />


</LinearLayout>